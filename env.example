# =================================================================
# ENVIRONMENT CONFIGURATION
# =================================================================
# Application environment: development, staging, production
ENVIRONMENT=development

# Enable/disable debug mode (should be False in production)
DEBUG=true

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL database credentials
POSTGRES_DB=fastapi_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=your_secure_password_here

# Database connection URL (auto-constructed from above or override)
DATABASE_URL=postgresql+asyncpg://admin:your_secure_password_here@localhost:5432/fastapi_db

# Database connection pool settings
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# JWT secret key for token signing (MUST be changed in production)
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# General application secret key (MUST be changed in production)
SECRET_KEY=your-secret-key-change-in-production

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# JWT algorithm
ALGORITHM=HS256

# =================================================================
# API CONFIGURATION
# =================================================================
# API settings
API_V1_PREFIX=/api/v1
PROJECT_NAME=User Management API
VERSION=1.0.0
DESCRIPTION=A robust FastAPI application for user management

# =================================================================
# CORS CONFIGURATION
# =================================================================
# Allowed origins (comma-separated list)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8000,http://127.0.0.1:8080

# Allowed HTTP methods (comma-separated list)
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS

# Allowed headers (use * for all or specify comma-separated list)
ALLOWED_HEADERS=*

# Allow credentials in CORS requests
ALLOW_CREDENTIALS=true

# =================================================================
# LOGGING CONFIGURATION
# =================================================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log format string
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log file path
LOG_FILE=logs/app.log

# Log rotation: daily, weekly, monthly
LOG_ROTATION=daily

# Log retention in days
LOG_RETENTION=7

# =================================================================
# AWS CONFIGURATION
# =================================================================
# AWS region
AWS_REGION=us-east-1

# AWS credentials (leave empty to use IAM roles or AWS CLI config)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# AWS S3 configuration
AWS_S3_BUCKET_NAME=your_s3_bucket_name

# AWS SQS Configuration (for consuming events)
AWS_SQS_INCOMING_EVENTS_QUEUE_URL=

# AWS SNS Configuration (for publishing events)
AWS_SNS_EVENTS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:microservices-events

# =================================================================
# EMAIL CONFIGURATION
# =================================================================
# SMTP server settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_USE_TLS=true

# Email sender address
EMAIL_FROM=noreply@yourapp.com

# =================================================================
# SMS CONFIGURATION
# =================================================================
# SMS provider (currently supports: twilio)
SMS_PROVIDER=twilio

# Twilio configuration
SMS_ACCOUNT_SID=your_twilio_account_sid
SMS_AUTH_TOKEN=your_twilio_auth_token
SMS_FROM_NUMBER=+1234567890

# Enable/disable SMS functionality
SMS_ENABLED=false

# =================================================================
# FILE UPLOAD CONFIGURATION
# =================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Allowed file extensions (comma-separated list)
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.txt

# Upload directory path
UPLOAD_PATH=uploads

# =================================================================
# PAGINATION CONFIGURATION
# =================================================================
# Default number of items per page
DEFAULT_PAGE_SIZE=20

# Maximum number of items per page
MAX_PAGE_SIZE=100

# =================================================================
# ADDITIONAL OPTIONAL CONFIGURATIONS
# =================================================================
# Set to true when running tests to skip certain validations
TESTING=false

# Custom application configurations can be added here
# CUSTOM_FEATURE_ENABLED=true
# EXTERNAL_API_URL=https://api.example.com
# CACHE_TTL=3600 